<%= form_with(model: post, local: true, class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md">
      <p><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</p>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, "Content", class: "block font-medium text-gray-700" %>
    <%= form.text_area :content, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :scheduled_at, "Scheduled At", class: "block font-medium text-gray-700" %>
    <%= form.datetime_field :scheduled_at, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.submit "Save Post", class: "btn-primary w-full px-4 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700" %>
  </div>
<% end %>
