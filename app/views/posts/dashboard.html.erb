<div class="flex">
  <!-- Sidebar -->
  <aside class="w-64 bg-blue-600 text-white p-6">
    <h2 class="text-2xl font-semibold">Dashboard</h2>
    <nav class="mt-6">
      <ul class="space-y-4">
        <li><%= link_to 'Home', root_path, class: "block px-4 py-2 rounded-md hover:bg-blue-500" %></li>
        <li><%= link_to 'Settings', settings_path, class: "block px-4 py-2 rounded-md hover:bg-blue-500" %></li>
        <li><%= link_to 'Posts', posts_dashboard_path, class: "block px-4 py-2 rounded-md hover:bg-blue-500" %></li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <div class="flex-1 p-8">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h1 class="text-3xl font-semibold text-gray-900">Manage Your Posts</h1>
      <p class="mt-4 text-lg text-gray-700">Here's a summary of your scheduled posts:</p>

      <!-- Posts List -->
      <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <div class="bg-gray-100 p-6 rounded-lg shadow-md">
              <h2 class="text-xl font-medium text-gray-800"><%= post.title %></h2>
              <p class="text-gray-600"><%= post.content %></p>
              <p class="text-sm text-gray-500">Scheduled for: <%= post.scheduled_at.strftime("%Y-%m-%d %H:%M") %></p>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-600">No posts available.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
