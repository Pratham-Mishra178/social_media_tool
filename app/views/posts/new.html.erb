<!-- app/views/posts/new.html.erb -->
<h1>Create a New Post</h1>

<%= form_with model: @post, url: posts_path, local: true do |form| %>
  <% if @post.errors.any? %>
    <div class="errors">
      <h2>There were errors in your submission:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4 %>
  </div>

  <div>
    <%= form.label :scheduled_at %>
    <%= form.datetime_select :scheduled_at %>
  </div>

  <div>
    <%= form.submit 'Create Post' %>
  </div>
<% end %>

<%= link_to 'Back to Dashboard', dashboard_path %>
