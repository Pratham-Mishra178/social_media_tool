  <!-- Main Dashboard Section -->
  <div class="flex justify-center items-center min-h-[calc(100vh-4rem)]">
    <div class="max-w-md w-full p-8 rounded-lg shadow-lg bg-white border border-gray-200" style="
    width: 500px;
    height: 600px;
    overflow: scroll;
">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Scheduler App</h1>

      <!-- Post Form -->
      <form action="#" method="post">
        <div class="mb-4">
          <input
            type="text"
            placeholder="Post Title"
            class="w-full py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div class="mb-4">
          <textarea
            placeholder="Post Content"
            class="w-full py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          ></textarea>
        </div>
        <div class="mb-4 flex justify-between space-x-2">
          <button
            type="button"
            class="w-1/3 py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg hover:bg-blue-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Text
          </button>
          <button
            type="button"
            class="w-1/3 py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg hover:bg-blue-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Image
          </button>
          <button
            type="button"
            class="w-1/3 py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg hover:bg-blue-500 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Video
          </button>
        </div>
        <div class="mb-4">
          <input
            type="date"
            class="w-full py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div class="mb-4">
          <input
            type="time"
            class="w-full py-2 px-4 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <button
          type="submit"
          class="w-full py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Schedule Post
        </button>
      </form>

      <!-- Scheduled Posts Section -->
      <div class="mt-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Scheduled Posts</h2>
        <ul class="list-disc pl-5">
          <li class="mb-4">
            <h3 class="text-lg font-bold text-gray-900">Post Title</h3>
            <p class="text-gray-600">Post Content</p>
            <p class="text-gray-600">Type: Text</p>
            <p class="text-gray-600">Date: 2023-12-31</p>
            <p class="text-gray-600">Time: 12:00 PM</p>
          </li>
          <!-- Add more scheduled posts here -->
        </ul>
      </div>
    </div>
  </div>

