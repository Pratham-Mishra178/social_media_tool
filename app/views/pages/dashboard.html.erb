<div class="h-screen flex flex-col items-center justify-center" style="background: linear-gradient(to bottom, #ff9a9e 0%, #fecfef 99%, #fecfef 100%)">
  <div class="flex justify-end w-full p-4">
    <%= button_to "Logout", root_path, method: :get, class: "py-2 px-4 bg-red-500 hover:bg-red-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </div>
  <div class="max-w-md w-full p-8 rounded-lg shadow-lg" style="background: rgba(255, 255, 255, 0.2); border-radius: 16px; box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); backdrop-filter: blur(5px); -webkit-backdrop-filter: blur(5px); border: 1px solid rgba(255, 255, 255, 0.3);">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Scheduler App</h1>
    <%= form_with url: "#", class: "space-y-4", method: :post do %>
      <%= text_field_tag :post_title, nil, placeholder: "Post Title", class: "w-full py-2 px-4 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= text_area_tag :post_content, nil, placeholder: "Post Content", class: "w-full py-2 px-4 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <div class="mb-4">
        <div class="flex items-center justify-between">
          <%= button_to "Text", "#", method: :get, class: "py-2 px-4 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <%= button_to "Image", "#", method: :get, class: "py-2 px-4 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <%= button_to "Video", "#", method: :get, class: "py-2 px-4 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
      <%= file_field_tag :post_image, accept: "image/*", class: "w-full py-2 px-4 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= file_field_tag :post_video, accept: "video/*", class: "w-full py-2 px-4 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= date_field_tag :schedule_date, nil, class: "w-full py-2 px-4 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= time_field_tag :schedule_time, nil, class: "w-full py-2 px-4 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= submit_tag "Schedule Post", class: "w-full py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% end %>
    <div class="mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Scheduled Posts</h2>
      <ul>
        <!-- Replace this with dynamic rendering later -->
        <li class="mb-4">
          <h3 class="text-lg font-bold text-gray-900">Post Title</h3>
          <p class="text-gray-600">Post Content</p>
          <p class="text-gray-600">Text</p>
          <p class="text-gray-600">2024-01-01</p>
          <p class="text-gray-600">10:00 AM</p>
          <p class="text-gray-600">Posted</p>
        </li>
      </ul>
    </div>
  </div>
</div>
